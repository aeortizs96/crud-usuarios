<%- include ../layouts/cabecera.ejs  %> 
<br/><br/>
<br/><br/>

<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos del usuario</h5>
        <p class="card-text">
            
            <form method="post" action="../actualizar/" enctype="multipart/form-data">
                
                <input type="hidden" name="id" value="<%= usuario.id %>">

                <div class="form-group">
                    <label for="my-input">Nombre:</label>
                    <input id="my-input" value="<%= usuario.nombre %>" class="form-control" type="text" name="nombre">
                </div>

                <div class="form-group">
                    <label for="my-input">Edad:</label>
                    <input id="my-input" value="<%= usuario.edad %>" class="form-control" type="text" name="edad">
                </div>

                <div class="form-group">
                    <label for="my-input">Correo:</label>
                    <input id="my-input" value="<%= usuario.correo %>" class="form-control" type="text" name="correo">
                </div>

                <div class="form-group">
                    <label for="my-input">Nacionalidad:</label>
                    <input id="my-input" value="<%= usuario.nacionalidad %>" class="form-control" type="text" name="nacionalidad">
                </div>

                <div class="form-group">
                    <label for="my-input">Carnet:</label>
                    <input id="my-input" value="<%= usuario.ci %>" class="form-control" type="text" name="ci">
                </div>

                <div class="form-group">
                    <label for="my-input">Imagen</label>
                    <img class="img-thumbnail" src="../../images/<%=usuario.imagen%>" width="100" alt="">
                    <input id="my-input" class="form-control-file" type="file" name="archivo">
                </div>

                <button class="btn btn-success" type="submit">Actualizar</button>
                <a href="/usuarios" class="btn btn-primary">Cancelar</a>

            </form>



        </p>
    </div>
</div>




